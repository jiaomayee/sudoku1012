# 数独学习应用环境变量配置示例
# 复制此文件为 .env 并填写实际值

# Flask 配置
FLASK_APP=run.py
FLASK_ENV=development
FLASK_CONFIG=development
SECRET_KEY=your-secret-key-change-in-production

# 数据库配置
# SQLite 配置 (开发环境)
DEV_DATABASE_URL=sqlite:///sudoku_dev.db

# 测试环境数据库配置
TEST_DATABASE_URL=sqlite:///:memory:

# 生产环境数据库配置示例
# 可以使用 PostgreSQL、MySQL 等
# DATABASE_URL=postgresql://username:password@localhost:5432/sudoku_db

# 服务器配置
HOST=0.0.0.0
PORT=5000

# 日志配置
LOG_LEVEL=INFO

# CORS 配置
# 以逗号分隔的允许的源列表
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# 算法配置
SUDOKU_SIZE=9

# 难度级别配置 (空单元格数量范围)
MIN_EMPTY_CELLS_EASY=35
MAX_EMPTY_CELLS_EASY=45
MIN_EMPTY_CELLS_MEDIUM=46
MAX_EMPTY_CELLS_MEDIUM=55
MIN_EMPTY_CELLS_HARD=56
MAX_EMPTY_CELLS_HARD=60
MIN_EMPTY_CELLS_EXPERT=61
MAX_EMPTY_CELLS_EXPERT=65

# 技巧识别配置
ENABLE_TECHNIQUE_RECOGNITION=true
TECHNIQUE_RECOGNITION_TIMEOUT=5

# API 配置
API_PREFIX=/api/v1

# 用户进度配置
AUTO_SAVE_INTERVAL=30
MAX_ACTIVE_PROGRESS_PER_USER=10